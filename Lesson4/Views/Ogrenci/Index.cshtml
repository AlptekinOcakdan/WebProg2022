@model Ogrenci
<style type="text/css">.form-group { }</style>
@Html.ActionLink("Link","OgrKaydet","Ogrenci",new{id=5})
<br/>

<form asp-action="OgrKaydet" asp-controller="Ogrenci">
    <div class="form-group">
        <label asp-for="OgrAd"></label>
        <input asp-for="OgrAd" class="form-control"/>
        <span asp-validation-for="OgrAd"></span>
    </div>
    <div class="form-group">
        <label asp-for="OgrSoyad"></label>
        <input asp-for="OgrSoyad" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="OgrNo"></label>
        <input asp-for="OgrNo" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="OgrYas"></label>
        <input asp-for="OgrYas" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Sehirler" class="control-label"></label>
        <select class="form-control" asp-for="Sehirler" asp-items="ViewBag.SehirKod"></select>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Gonder"/>
    </div>
    

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }